<UserControl x:Class="Fitness_Tracking_App_Rene_Özbay_1usa.UserControls.TextInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="textInfo" Margin="7 0">
    <Border BorderThickness="2" CornerRadius="20" Padding="0 10">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#6e50b5"/>
                        <Setter Property="Background" Value="#8276c0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
            
    </Border>
</UserControl>
