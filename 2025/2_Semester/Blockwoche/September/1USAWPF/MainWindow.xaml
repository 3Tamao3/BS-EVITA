                                        <Setter TargetName="Bd" Property="BorderBrush"  Value="{StaticResource TabBorder}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TabFg}"/>
                                    </Trigger>

                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground"
                                    Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
