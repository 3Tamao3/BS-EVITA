<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:vm="using:_1_WocheWPF.ViewModels"
        x:Class="_1_WocheWPF.Views.MainWindow"
        Width="400" Height="250"
        Title="Telefonbuch">

  <Window.DataContext>
    <vm:MainWindowViewModel/>
  </Window.DataContext>

  <StackPanel Margin="20" Spacing="12">
    <TextBlock Text="Telefonbuch-Suche" FontSize="20" FontWeight="Bold" />

    <TextBox Watermark="Name eingeben..."
             Text="{Binding NameInput, Mode=TwoWay}" />

    <Button Content="Suchen" Command="{Binding SearchCommand}" />

    <Border Background="#f0f0f0" Padding="8" CornerRadius="6">
      <TextBlock Text="{Binding PhoneNumber}" TextWrapping="Wrap" />
    </Border>
  </StackPanel>
</Window>
