<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Telefonbuch" Height="450" Width="1000">
    <Grid Background="White">
        <TextBlock x:Name="nummerText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="330" Width="408" FontSize="24" TextAlignment="Center" Foreground="Black" Margin="331,11,0,0"/>
        <Button  Content="Anzeigen" HorizontalAlignment="Left" Margin="413,333,0,0" VerticalAlignment="Top" Height="33" Width="244" Click="TelefonbuchAnzeigen" Background="#FF807A89" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri"/>
        <TextBox x:Name="suchBox" HorizontalAlignment="Left" Margin="830,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20" Text="Suchen"/>
        <Button Content="Suchen" HorizontalAlignment="Left" Margin="850,220,0,0" VerticalAlignment="Top" Height="36" Width="80" Background="#FF807A89" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="TelefonbuchSuche"/>
        <TextBox HorizontalAlignment="Left" Margin="44,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20" x:Name="telefonbuchNameInput" Text="Name"/>
        <Button Content="Hinzufügen" HorizontalAlignment="Left" Margin="118,220,0,0" VerticalAlignment="Top" Height="36" Width="124" Background="#FF807A89" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="TelefonbuchHinzufuegen"/>
        <TextBox HorizontalAlignment="Left" Margin="195,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20" x:Name="phoneNumberInput" Text="Nummer"/>
        <TextBlock x:Name="zähler" HorizontalAlignment="Left" Margin="791,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Height="38" Width="99" FontSize="24"/>
        <Button Content="Löschen" HorizontalAlignment="Left" Margin="413,378,0,0" VerticalAlignment="Top" Height="35" Width="252" Background="#FF807A89" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="TelefonbuchLöschen"/>
    </Grid>
</Window>
