<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Telefonbuch - Rene Özbay" Height="450" Width="1000">
    <Grid Background="#FF281D45">
        <TextBlock HorizontalAlignment="Left" Margin="815,223,0,0" TextWrapping="Wrap" Text="Tamao" VerticalAlignment="Top" FontSize="48" FontFamily="Segoe Script" Foreground="White" RenderTransformOrigin="0.5,0.5" Width="306">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="phoneDisplayText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="330" Width="408" FontSize="24" TextAlignment="Center" Foreground="White" Margin="51,24,0,0"/>
        <Button  Content="Telefonbuch Anzeigen" HorizontalAlignment="Left" Margin="133,368,0,0" VerticalAlignment="Top" Height="33" Width="244" Click="PhoneDisplay" Background="#FFBBA9D2" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri"/>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Margin="645,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20"/>
        <Button Content="Suchen" HorizontalAlignment="Left" Margin="665,132,0,0" VerticalAlignment="Top" Height="36" Width="80" Background="#FFBBA9D2" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="PhoneSearch"/>
        <TextBox HorizontalAlignment="Left" Margin="561,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20" x:Name="phoneNameInput"/>
        <Button Content="Hinzufügen" HorizontalAlignment="Left" Margin="643,245,0,0" VerticalAlignment="Top" Height="36" Width="124" Background="#FFBBA9D2" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="PhoneAdd"/>
        <TextBox HorizontalAlignment="Left" Margin="719,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="34" FontSize="20" x:Name="phoneNumberInput"/>
        <TextBlock x:Name="phoneCount" HorizontalAlignment="Left" Margin="401,366,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="38" Width="99" FontSize="24"/>
        <Button Content="Telefonbuch Löschen" HorizontalAlignment="Left" Margin="579,319,0,0" VerticalAlignment="Top" Height="35" Width="252" Background="#FFBBA9D2" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Calibri" Click="PhoneDelete"/>
    </Grid>
</Window>
